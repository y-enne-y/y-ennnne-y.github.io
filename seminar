    <script>
        function toggleDropdown(event) {
            event.preventDefault();
            event.stopPropagation();
            const dropdown = document.querySelector('.lang-dropdown');
            dropdown.classList.toggle('active');
        }

        function setLanguage(lang) {
            const krElements = document.querySelectorAll('.content-kr');
            const enElements = document.querySelectorAll('.content-en');

            if (lang === 'ko') {
                krElements.forEach(el => el.classList.remove('hidden'));
                enElements.forEach(el => el.classList.add('hidden'));
            } else if (lang === 'en') {
                krElements.forEach(el => el.classList.add('hidden'));
                enElements.forEach(el => el.classList.remove('hidden'));
            }

            const dropdown = document.querySelector('.lang-dropdown');
            if (dropdown) dropdown.classList.remove('active');

            const dropdownContent = document.querySelector('.dropdown-content');
            if (dropdownContent) {
                dropdownContent.style.display = 'none';
                void dropdownContent.offsetWidth;
                setTimeout(() => { dropdownContent.style.display = ''; }, 50);
            }
        }

        document.addEventListener('click', function(event) {
            const dropdown = document.querySelector('.lang-dropdown');
            if (dropdown && !dropdown.contains(event.target)) {
                dropdown.classList.remove('active');
            }
        });

        /* --- ëª¨ë°”ì¼ì—ì„œ í´ë¦­ ì‹œ ì¹´ë“œ ë’¤ì§‘ê¸° íš¨ê³¼ (Toggle) --- */
        function toggleCard(card) {
            // ì´ë¯¸ í™œì„±í™”ëœ ë‹¤ë¥¸ ì¹´ë“œë“¤ì€ ë‹«ê¸° (ì„ íƒì‚¬í•­: í•œ ë²ˆì— í•˜ë‚˜ë§Œ ë³´ê³  ì‹¶ë‹¤ë©´ ì£¼ì„ í•´ì œ)
            // document.querySelectorAll('.food-card.active').forEach(c => {
            //     if(c !== card) c.classList.remove('active');
            // });
            
            card.classList.toggle('active');
        }

        /* --- [ì´ìŠ¤í„°ì—ê·¸ Step 4] ì‘ë™ ë¡œì§ --- */
        function closeEasterEgg() {
            document.getElementById('easterEggModal').classList.remove('show');
        }

        let eggClickCount = 0;
        let eggTimer;
        const eggTrigger = document.getElementById('eggTrigger');

        if (eggTrigger) {
            eggTrigger.addEventListener('mousedown', (e) => { e.preventDefault(); });
            eggTrigger.addEventListener('click', (e) => {
                eggClickCount++;
                clearTimeout(eggTimer);
                eggTimer = setTimeout(() => { eggClickCount = 0; }, 3000);
                if (eggClickCount === 5) {
                    document.getElementById('easterEggModal').classList.add('show');
                    eggClickCount = 0; 
                }
            });
        }
    </script>
</body>
</html>
